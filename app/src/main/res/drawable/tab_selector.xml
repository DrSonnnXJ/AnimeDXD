<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: White background with light grey border -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="#CCCCCC" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Unselected state: Light blue/grey background (matching main layout) with light grey border -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                    <solid android:color="#E0F2F7" /> <!-- Set to match the main layout background color -->
                    <stroke android:width="1dp" android:color="#CCCCCC" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
