<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: White background with light grey border -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="25dp" android:topRightRadius="25dp" />
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="@color/grey_tab_border" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Unselected state: Light blue/grey background (matching main layout) with light grey border -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="25dp" android:topRightRadius="25dp" />
                    <solid android:color="@color/unselected_tab" />
                    <stroke android:width="1dp" android:color="@color/grey_tab_border" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
